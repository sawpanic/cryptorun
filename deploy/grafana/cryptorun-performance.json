{
  "dashboard": {
    "id": null,
    "title": "CryptoRun Performance & Portfolio",
    "tags": ["cryptorun", "performance", "portfolio"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Performance Sharpe Ratio",
        "type": "gauge",
        "targets": [
          {
            "expr": "cryptorun_performance_sharpe_ratio",
            "legendFormat": "{{strategy}} {{timeframe}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "max": 3,
            "unit": "none",
            "thresholds": {
              "steps": [
                {
                  "color": "red",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 1.0
                },
                {
                  "color": "green",
                  "value": 2.0
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "Maximum Drawdown",
        "type": "gauge",
        "targets": [
          {
            "expr": "cryptorun_performance_max_drawdown",
            "legendFormat": "{{strategy}} {{timeframe}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "max": 0.5,
            "unit": "percentunit",
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 0.15
                },
                {
                  "color": "red",
                  "value": 0.25
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 8,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "Hit Rate",
        "type": "gauge",
        "targets": [
          {
            "expr": "cryptorun_performance_hit_rate",
            "legendFormat": "{{strategy}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "max": 1,
            "unit": "percentunit",
            "thresholds": {
              "steps": [
                {
                  "color": "red",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 0.45
                },
                {
                  "color": "green",
                  "value": 0.55
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 16,
          "y": 0
        }
      },
      {
        "id": 4,
        "title": "Portfolio Exposure",
        "type": "piechart",
        "targets": [
          {
            "expr": "cryptorun_portfolio_exposure",
            "legendFormat": "{{type}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD"
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        }
      },
      {
        "id": 5,
        "title": "Portfolio Risk Metrics",
        "type": "stat",
        "targets": [
          {
            "expr": "cryptorun_portfolio_risk",
            "legendFormat": "{{metric}}"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        }
      },
      {
        "id": 6,
        "title": "Pipeline Performance",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(cryptorun_pipeline_steps_total[5m])",
            "legendFormat": "{{step}} {{status}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps"
          }
        },
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 16
        }
      },
      {
        "id": 7,
        "title": "Error Rate by Step",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(cryptorun_pipeline_errors_total[5m])",
            "legendFormat": "{{step}} {{error_type}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps"
          }
        },
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 24
        }
      }
    ],
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "refresh": "1m",
    "schemaVersion": 30
  }
}
