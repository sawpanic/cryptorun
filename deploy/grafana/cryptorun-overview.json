{
  "dashboard": {
    "id": null,
    "title": "CryptoRun Overview Dashboard",
    "tags": ["cryptorun", "overview"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "System Health",
        "type": "stat",
        "targets": [
          {
            "expr": "cryptorun_provider_health",
            "legendFormat": "{{provider}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {
                "options": {
                  "0": {
                    "text": "DOWN",
                    "color": "red"
                  },
                  "1": {
                    "text": "UP",
                    "color": "green"
                  }
                },
                "type": "value"
              }
            ],
            "unit": "none"
          }
        },
        "gridPos": {
          "h": 6,
          "w": 12,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "Active Scans",
        "type": "stat",
        "targets": [
          {
            "expr": "cryptorun_active_scans",
            "legendFormat": "Active Scans"
          }
        ],
        "gridPos": {
          "h": 6,
          "w": 12,
          "x": 12,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "Cache Hit Ratio",
        "type": "gauge",
        "targets": [
          {
            "expr": "cryptorun_cache_hit_ratio",
            "legendFormat": "Hit Ratio"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "max": 1,
            "unit": "percentunit",
            "thresholds": {
              "steps": [
                {
                  "color": "red",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 0.7
                },
                {
                  "color": "green",
                  "value": 0.85
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 0,
          "y": 6
        }
      },
      {
        "id": 4,
        "title": "Current Regime",
        "type": "stat",
        "targets": [
          {
            "expr": "cryptorun_active_regime",
            "legendFormat": "Regime"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {
                "options": {
                  "0": {
                    "text": "CHOPPY",
                    "color": "yellow"
                  },
                  "1": {
                    "text": "BULL",
                    "color": "green"
                  },
                  "2": {
                    "text": "HIGH VOL",
                    "color": "red"
                  }
                },
                "type": "value"
              }
            ],
            "unit": "none"
          }
        },
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 8,
          "y": 6
        }
      },
      {
        "id": 5,
        "title": "Portfolio Value",
        "type": "stat",
        "targets": [
          {
            "expr": "cryptorun_portfolio_value{currency=\"USD\"}",
            "legendFormat": "USD Value"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD"
          }
        },
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 16,
          "y": 6
        }
      },
      {
        "id": 6,
        "title": "Provider Latency",
        "type": "timeseries",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(cryptorun_provider_latency_seconds_bucket[5m]))",
            "legendFormat": "P95 {{provider}}"
          },
          {
            "expr": "histogram_quantile(0.99, rate(cryptorun_provider_latency_seconds_bucket[5m]))",
            "legendFormat": "P99 {{provider}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s"
          }
        },
        "gridPos": {
          "h": 9,
          "w": 24,
          "x": 0,
          "y": 14
        }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s",
    "schemaVersion": 30
  }
}
