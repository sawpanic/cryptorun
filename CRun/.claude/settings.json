{
  "permissions": {
    "allow": [
      "Read(./**/*)",
      "Glob(*)",
      "Grep(*)",
      "WebFetch",
      "Bash(*)",
      "Edit(./**/*)",
      "Write(./**/*)"
    ],
    "ask": [],
    "deny": [
      "Read(./secrets/**)",
      "Read(./.env*)"
    ]
  },
  "hooks": {
    "UserPromptSubmit": [
      { "hooks": [ 
        { "type": "command", "command": "pwsh -NoProfile -File .claude/hooks/prompt-fastlane.ps1", "timeout": 5 },
        { "type": "command", "command": "pwsh -NoProfile -File .claude/hooks/prompt-guard.ps1", "timeout": 3 },
        { "type": "command", "command": "pwsh -NoProfile -File .claude/hooks/spec-guard.ps1", "timeout": 3 },
        { "type": "command", "command": "pwsh -NoProfile -File .claude/hooks/path-guard.ps1", "timeout": 3 },
        { "type": "command", "command": "pwsh -NoProfile -File .claude/hooks/change-budget.ps1", "timeout": 3 },
        { "type": "command", "command": "pwsh -NoProfile -File .claude/hooks/diff-plan.ps1", "timeout": 3 }
      ] }
    ],
    "PreToolUse": [
      { "hooks": [ { "type": "command", "command": "pwsh -NoProfile -File .claude/hooks/webfetch-allow.ps1", "timeout": 3 } ] }
    ],
    "PostToolUse": [
      { "hooks": [ { "type": "command", "command": "pwsh -NoProfile -File .claude/hooks/check-tests.ps1", "timeout": 10 } ] }
    ]
  },
  "env": {
    "CLAUDE_CODE_MAX_OUTPUT_TOKENS": "4096",
    "BASH_MAX_OUTPUT_LENGTH": "200000"
  },
  "defaultMode": "acceptEdits",
  "disableBypassPermissionsMode": "disable"
}
